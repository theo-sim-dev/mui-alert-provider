{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src", // Ensure TypeScript knows where the source files are
    "composite": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "demo"]
}